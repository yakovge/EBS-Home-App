# Environment Configuration Template
# Copy this file to .env.local and update the values for your local development setup

# Environment (development, staging, production)
NODE_ENV=development

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:5000/api
EXPO_PUBLIC_API_TIMEOUT=10000

# Firebase Configuration
# Get these values from your Firebase project settings
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id

# EAS Configuration
# Get this from your EAS project
EXPO_PUBLIC_EAS_PROJECT_ID=your-eas-project-id

# Debug Configuration
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_ENABLE_MOCK_DATA=true
EXPO_PUBLIC_LOG_LEVEL=debug

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATIONS_ENABLED=true

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false

# Security (production only)
EXPO_PUBLIC_SSL_PINNING_ENABLED=false
EXPO_PUBLIC_CERTIFICATE_TRANSPARENCY_ENABLED=false
EXPO_PUBLIC_ENABLE_SECURITY_HEADERS=false

# Performance
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false
EXPO_PUBLIC_BUNDLE_SIZE_ANALYSIS=false